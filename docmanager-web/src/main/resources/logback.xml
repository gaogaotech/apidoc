        </layout>
    </appender>

    <!-- digest  -->
    <logger name="com.hightech.apidoc.common.template" additivity="false">
        <level value="${LOG_LEVEL}"/>
        <appender-ref ref="docmanager-DIGEST-APPENDER"/>
        <appender-ref ref="error"/>
    </logger>

    <!-- commom package -->
    <logger name="com.hightech.apidoc.common" additivity="false">
        <level value="${LOG_LEVEL}"/>
        <appender-ref ref="common"/>
        <appender-ref ref="error"/>
    </logger>


    <!-- dal package -->
    <logger name="com.hightech.apidoc.dal" additivity="false">
        <level value="${LOG_LEVEL}"/>
        <appender-ref ref="dal"/>
        <appender-ref ref="error"/>
    </logger>

    <!-- api access logger -->
    <logger name="apiAccessLogger" additivity="false">
        <level value="${LOG_LEVEL}"/>
        <appender-ref ref="apiAccessAppender"/>
    </logger>

    <!-- biz package -->
    <logger name="com.hightech.apidoc.biz" additivity="false">
        <level value="${LOG_LEVEL}"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="biz"/>
        <appender-ref ref="error"/>
